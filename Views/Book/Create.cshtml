@model SimpleLibrary.Models.Book

<h2>Create Book</h2>

<form asp-action="NewBook">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desctiption" class="control-label"></label>
        <input asp-for="Desctiption" class="form-control"/>
        <span asp-validation-for="Desctiption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label"></label>
        <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorList"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
</form>